page{
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.8);
	position: relative;
}
.cropper-wrapper{
	position: absolute;
	left:0;
	top: 50%;
	transform: translateY(-50%);
}
.wx-corpper-btn{
  width: 100%;
  margin: 0 auto;
  position: absolute;
  bottom: 40rpx;
  box-sizing: border-box;
  padding: 0 60rpx;
  display: flex;
  justify-content:space-between;
}
.wx-corpper-btn button{
  height: 70rpx;
  line-height: 70rpx;
  margin: 0;
  background: #22b0f7; 
}